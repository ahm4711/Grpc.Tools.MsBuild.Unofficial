# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**/{*proj,*.props,*.targets}]
indent_size = 2

[*.sln]
indent_style = tab
tab_width = 4

[.gitignore]
end_of_line = lf

[LICENSE.txt]
end_of_line = lf

[appveyor.yml]
indent_size = 2

[.travis.yml]
indent_size = 2
end_of_line = lf
